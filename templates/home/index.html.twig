{% extends 'base.html.twig' %}

{% block title %}Black Mirror - Home{% endblock %}

{% block body %}
    <div class="masthead mt-5"></div>

    <div class="container">
        <div id="episodes">
            <h2 class="text-center mb-4">EPISODES</h2>

            <h4 class="text-center">SEASON 1</h4>
            <div class="row">
                {% for episode in episodes if episode.season == 1 %}
                <div class="col-md-4 col-sm-6">
                    <a href="{{ path('episode_show', {'slug' : episode.slug}) }}">
                        <div class="episode mx-1 my-3 text-center">
                            <p>
                                <span class="badge badge-dark">Season {{ episode.season }}</span> 
                                <span class="badge badge-dark">Episode {{ episode.number }}</span>
                                <br/>{{ episode.name }}
                            </p>
                            <div>
                                <img src="{{ asset(episode.imgPath ~ 'thumbnail/' ~  episode.imgName) }}" alt="{{ episode.name }}" />
                            </div>
                        </div>
                    </a>
                </div>
